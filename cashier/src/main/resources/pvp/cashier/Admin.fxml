<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pvp.cashier.controllers.AdminController">
   <children>
      <TableView fx:id="productView" prefHeight="270.0" prefWidth="600.0">
        <columns>
            <TableColumn fx:id="productColumn" prefWidth="115.0" text="Product" />
            <TableColumn fx:id="priceColumn" prefWidth="79.0" text="Price" />
            <TableColumn fx:id="skuColumn" prefWidth="87.0" text="sku" />
            <TableColumn fx:id="pkColumn" prefWidth="126.0" text="pk" />
            <TableColumn fx:id="itemSoldColumn" prefWidth="65.0" text="Items sold" />
            <TableColumn fx:id="timeColumn" prefWidth="127.0" text="Time period" />
        </columns>
      </TableView>
      <TextField fx:id="timeInput" layoutX="23.0" layoutY="286.0" promptText="Time period" />
      <Button layoutX="76.0" layoutY="338.0" mnemonicParsing="false" onAction="#limitTime" text="Limit" />
      <TextField fx:id="ageInput" layoutX="205.0" layoutY="286.0" promptText="Customer age" />
      <Button layoutX="259.0" layoutY="338.0" mnemonicParsing="false" onAction="#limitAge" text="Limit" />
      <Button layoutX="395.0" layoutY="286.0" mnemonicParsing="false" onAction="#limitMale" text="Male" />
      <Button layoutX="531.0" layoutY="286.0" mnemonicParsing="false" onAction="#limitSexBoth" text="Both" />
      <Button layoutX="459.0" layoutY="286.0" mnemonicParsing="false" onAction="#limitFemale" text="Female" />
      <TextField fx:id="newPriceInput" layoutX="412.0" layoutY="326.0" promptText="New price" />
      <Button layoutX="443.0" layoutY="363.0" mnemonicParsing="false" onAction="#editPrice" text="Set new price" />
   </children>
</AnchorPane>
